# Django Configuration
DJANGO_SECRET_KEY=dev-secret-key-change-in-production
DJANGO_DEBUG=1
ALLOWED_HOSTS=127.0.0.1,localhost

# Database (for production, use DATABASE_URL from Render)
DATABASE_URL=sqlite:///db.sqlite3

# Financial Modeling Prep API
FMP_API_KEY=your_fmp_api_key_here

# OpenAI API (for LLM features)
OPENAI_API_KEY=your_openai_api_key_here

# Default Risk-Free Rate for Sharpe ratio calculations
DEFAULT_RF=0.03

# CSRF trusted origins (add your production domain)
CSRF_TRUSTED_ORIGINS=https://*.onrender.com

# Email configuration (for allauth)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
DEFAULT_FROM_EMAIL=noreply@shans-web.com

# Site configuration
SITE_ID=1
